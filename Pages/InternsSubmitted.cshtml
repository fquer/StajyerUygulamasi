@page
@model InternsSubmitted
@using StajyerUygulamasi.Model
@{
    ViewData["Title"] = "InternsSubmitted";
    var interns = (List<Intern>)ViewData["InternsSubmitted"];
    int stajyerID = (int)ViewData["stajyerID"];
}
<head>
    <meta charset="utf-8" />
</head>

<div class="text-center">
    <h2>Başvurulan Stajlar</h2>

    <div class="container mt-5 mb-3">
        <div class="row">
            @foreach (var intern in interns)
            {

                <div class="col-md-4">
                    <div class="card p-3 mb-2 border border-3" id="@intern.Id">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                                <div class="icon"> <i class="bx bxl-mailchimp"></i> </div>
                                <div class="ms-2 c-details">
                                    <h6 class="mb-0">@intern.CompanyName</h6> <span>@intern.OpenTime</span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-5">
                            <h3 class="heading">@intern.Position</h3>
                            <div class="mt-5">

                                <div class="mt-3"> <span class="text1">@intern.ApplicantsCounter kişi başvurdu!</span> </div>
                                <form class="mt-4" method="post">
                                    <input hidden name="internID" value="@intern.Id">
                                    <input hidden name="stajyerID" value="@stajyerID">
                                    <input type="submit" value="Başvuruyu Sil">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<script>
    
</script>