@page
@model StajyerUygulamasi.Pages.InternsModel
@using StajyerUygulamasi.Model
@{
    ViewData["Title"] = "Interns";
    var interns = (List<Intern>)ViewData["Interns"];
}
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/interns-style.css" />
</head>
<div class="text-center">
    <div class="container mt-5 mb-3">
        <div class="row">

            @foreach (var intern in interns)
            {

                <div class="col-md-4">
                    <div class="card p-3 mb-2" id="@intern.Id">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                                <div class="icon"> <i class="bx bxl-mailchimp"></i> </div>
                                <div class="ms-2 c-details">
                                    <h6 class="mb-0">@intern.CompanyName</h6> <span>@intern.OpenTime</span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-5">
                            <h3 class="heading">@intern.Position</h3>
                            <div class="mt-5">
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            
                                 <div class="mt-3"> <span class="text1">@intern.ApplicantsCounter kişi başvurdu!</span> </div>
                                   
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

<script type="module" src="~/js/interns.js" asp-append-version="true"></script>
